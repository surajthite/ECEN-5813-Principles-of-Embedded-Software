#include <stdio.h>
#include <string.h>
 
int main()
{
  	char inputstring[100];
  	int i;
  	
  	int frequency_of_chars[256] = {0}; 
 
  	printf("\n Please Enter any String :  ");
  	gets(inputstring);   // Here, we can pass the received characters from UART Rx Buffer
  	
  	
  	for(i = 0; inputstring[i] != '\0'; i++)
  	{
  	frequency_of_chars[inputstring[i]]++;
	}
  		
  	for(i = 0; i < 256; i++)
  	{
		if(frequency_of_chars[i] != 0)
		{
			printf("%c-%d ", i, frequency_of_chars[i]); // printing characters and their countin ASCII value order
		}
	}
	
  	return 0;
}